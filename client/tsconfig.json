{
    "compilerOptions": {
        "target": "ESNext",
        "baseUrl": "src",
        "sourceMap": true,
        "lib": [
            "dom",
            "esnext",
        ],
        "allowJs": false,
        "skipLibCheck": true,
        "esModuleInterop": false,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": false,
        "module": "ESNext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "jsx": "react",
        "removeComments": true,
        "outDir": "build"
    },
    "exclude": [
        "node_modules",
        "public",
        "build",
    ],
}