{
    "name": "cloud-vod",
    "version": "1.0.0",
    "description": "CloudVOD is a video on demand platform using Microsoft Azure",
    "scripts": {
        "start": "npm run serve",
        "build": "npm run build-ts",
        "serve": "node dist/server.js",
        "watch-node": "nodemon dist/server.js",
        "watch": "npm run build && concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold\"  \"npm run watch-ts\" \"npm run watch-node\"",
        "build-ts": "tsc",
        "watch-ts": "tsc -w",
        "dev": "ts-node src/index.ts",
        "lint": "eslint . --ext .ts",
        "test": "npm run lint"
    },
    "devDependencies": {
        "@types/cors": "^2.8.9",
        "@types/express": "^4.17.11",
        "@types/multer": "^1.4.5",
        "@types/node": "^14.14.25",
        "@typescript-eslint/eslint-plugin": "^4.15.0",
        "@typescript-eslint/parser": "^4.14.2",
        "concurrently": "^5.3.0",
        "eslint": "^7.19.0",
        "eslint-config-prettier": "^7.2.0",
        "eslint-plugin-prettier": "^3.3.1",
        "nodemon": "^2.0.7",
        "ts-node": "^9.1.1",
        "typescript": "^4.1.3"
    },
    "husky": {
        "hooks": {
            "pre-push": "npm run lint"
        }
    },
    "dependencies": {
        "@azure/arm-mediaservices": "^8.0.0",
        "@azure/ms-rest-azure-js": "^2.0.2",
        "@azure/ms-rest-js": "^2.2.1",
        "@azure/ms-rest-nodeauth": "^3.0.6",
        "@azure/storage-blob": "^12.4.1",
        "cors": "^2.8.5",
        "dotenv": "^8.2.0",
        "dotenv-defaults": "^2.0.1",
        "express": "^4.17.1",
        "fs": "0.0.1-security",
        "into-stream": "^6.0.0",
        "multer": "^1.4.2",
        "url-parse": "^1.4.7"
    }
}
