{
    "compilerOptions": {
        "target": "ESNext",
        "sourceMap": true,
        "lib": [
            "dom",
            "esnext",
        ],
        "allowJs": false,
        "skipLibCheck": true,
        "esModuleInterop": false,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": false,
        "module": "ESNext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "jsx": "react",
        "removeComments": true,
        "outDir": "build",
        "types": [
            "vite/client",
            "@types/jest",
            "vite-plugin-pwa/client"
        ]
    },
    "include": [
        "src",
    ],
}